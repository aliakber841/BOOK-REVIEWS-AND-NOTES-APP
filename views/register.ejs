<%- include('partials/header') %>
  <!-- Makes POST request to /register route -->
   <div class="register">
   <div class="register-container">
    <h1 class="register-text">Sign Up</h1>
  <form action="/register" method="POST">
    <label class="username-text" for="username">Username</label>
      <input class="username" type="username" name="username" required>
      <label class="email-text" for="email">Email</label>
      <input class="email" type="email" name="email" required>
      <label class="password-text" for="password">Password</label>
      <input class="password" type="password" name="password" required>
    <button type="submit" class="register-btn">Register</button>

    <div class="google-div">
        <a class="google-btn" href="/auth/google" role="button">
            <i class="ri-google-fill"></i>
          Sign Up with Google
        </a>
    </div>
     
  </form>

</div>
</div>